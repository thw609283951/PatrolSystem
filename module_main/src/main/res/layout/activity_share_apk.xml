<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackg"
    android:orientation="vertical">
    <include layout="@layout/view_include_toolbar"/>

    <ImageView
        android:id="@+id/iv_share_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxh"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/app_uri"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/CommonText"
        android:text="@string/scan_code_download"/>

</LinearLayout>
