<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FrameTabItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_l</item>
        <item name="android:layout_marginRight">@dimen/spacing_l</item>
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/bg_frame_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WorkTitleText">
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="WhiteText">
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="WhiteSmallText">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CommentDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软件盘-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>
