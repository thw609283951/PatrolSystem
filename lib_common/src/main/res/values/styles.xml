<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--页面背景色-->
        <!--<item name="android:windowBackground">@color/windowBackg</item>-->
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--ToolBar上的Title颜色-->
        <item name="android:textColorPrimary">@color/textColor</item>
        <!--各个控制控件的默认颜色-->
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>          <!-- 返回按钮和三点更多按钮颜色 -->
    </style>


    <!-- 设置Toolbar菜单文字的大小  -->
    <style name="ToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item> <!--字体大小-->
    </style>

    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarText</item>
        <!--<item name="android:minHeight">@dimen/toolbar_height_m</item>-->
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="maxButtonHeight">@dimen/toolbar_height</item>
        <item name="android:paddingTop">@dimen/toolbar_padding_top</item>
        <item name="titleMargin">0dp</item>
    </style>


    <!--控制头部据appbar的样式-->
    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--用于控制toolbar溢出菜单的样式-->
    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--<style name="MyDialog" parent="AlertDialog.AppCompat">-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowBackground">@color/white</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    <!--</style>-->

    <!--全屏-->
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <!-- Activity dialog -->
    <style name="NoTitleDialog" parent="AppTheme">
        <!--没有标题-->
        <item name="windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--&lt;!&ndash;是否有覆盖&ndash;&gt;-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--背景：透明-->
        <item name="android:windowBackground">@color/translucent</item>
        <!--&lt;!&ndash;dialog的整个屏幕的背景是否有遮障层&ndash;&gt;-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <!--动画-->
        <item name="android:windowAnimationStyle"> @style/AnimBottom</item>
    </style>



    <!-- 常用样式 -->
    <style name="CommonActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/windowBackg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CommonFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/fragmentBackg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CommonLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">@dimen/spacing_m</item>
        <item name="android:layout_marginRight">@dimen/spacing_m</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="MyErrorStyle">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CommonTitleText">
        <item name="android:textSize">@dimen/text_size_xh</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CommonSubTitleText">
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CommonLightText">
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/textLightColor</item>
    </style>


    <style name="CommonText">
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CommonBoldText" parent="CommonText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonSmallText">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CommonPadding_tbm_lrh">
        <item name="android:paddingTop">@dimen/spacing_m</item>
        <item name="android:paddingBottom">@dimen/spacing_m</item>
        <item name="android:paddingLeft">@dimen/spacing_h</item>
        <item name="android:paddingRight">@dimen/spacing_h</item>
    </style>

    <style name="CommonPadding_tbl_lrm">
        <item name="android:paddingTop">@dimen/spacing_s</item>
        <item name="android:paddingBottom">@dimen/spacing_s</item>
        <item name="android:paddingLeft">@dimen/spacing_m</item>
        <item name="android:paddingRight">@dimen/spacing_m</item>
    </style>

    <style name="CommonButton" parent="CommonPadding_tbm_lrh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:background">@drawable/btn_click_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CommonRedButton" parent="CommonPadding_tbm_lrh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:background">@drawable/btn_red_click_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CommonGreyLightShape" parent="CommonPadding_tbm_lrh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_shape_bg</item>
    </style>

    <style name="CommonEditText" parent="CommonGreyLightShape">
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CommonSmallEditText" parent="CommonGreyLightShape">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CommonItemLine" parent="@style/CommonPadding_tbl_lrm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 动画 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="UnReadCountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/ic_unread_count_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CommonTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:background">@drawable/bg_tag_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>